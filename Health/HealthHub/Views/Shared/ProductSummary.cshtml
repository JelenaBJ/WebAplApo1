@using System.Globalization
@model Product

<div class="card bg-light text-bold m-3 p-1">
    <div class="bg-light aling-items-center p-1">
        <h4>
            @Model?.Name
            <span class="badge badge-pill bg-secondary text-white" style="float:right">
                <small>@(Model?.Price.ToString("c",CultureInfo.CreateSpecificCulture("sr-RS")))</small>
            </span>
        </h4>
        
    </div>
    <form id="@Model?.ProductID" asp-page="/Cart" method="post"> 
        <input type="hidden" asp-for="ProductID" /> 
        <input type="hidden" name="returnUrl"
            value="@ViewContext.HttpContext.Request.PathAndQuery()" /> 
        <span class="card-text p-1">
            @Model?.Description
            <button type="submit"
                class="btn btn-outline-success btn-md pull-right" style="float:right">
                Dodaj u korpu
            </button> 
        </span>
    </form>
</div>
 
