@using System.Globalization
@model Cart

<div class="container">
    
    
    @if (Model?.Lines.Any() == true) 
    {
        <small class="navbar-text">
            <b>Va≈°a korpa:</b>
            @Model.Lines.Sum(x => x.Quantity) proizvod/a
            @Model.ComputeTotalValue().ToString("c", CultureInfo.CreateSpecificCulture("sr-RS"))
        </small>
    }
    <a class="btn btn-sm btn-dark navbar-btn" asp-page="/Cart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fas fa-shopping-cart"></i> <!-- Bootstrap Icons korpa -->
    </a>
</div>